<?xml version="1.0" encoding="ISO-8859-1"?>
<rule>
  <idrule>send</idrule>
  <hostids/>
  <mode>1</mode>

  <!-- Tasks run on the sender side -->
  <spretasks>
    <!-- tasks run before the transfer -->
    <tasks>
      <task>
        <type>EXEC</type>
        <path>{COMMAND TO RUN}</path>
        <delay>10000</delay>
      </task>
    </tasks>
  </spretasks>
  <sposttasks>
    <!-- tasks run after the transfer -->
    <tasks>
      <task>
        <type>EXEC</type>
        <path>{COMMAND TO RUN}</path>
        <delay>10000</delay>
      </task>
    </tasks>
  </sposttasks>
  <serrortasks>
    <!-- tasks run when a transfer fails -->
    <tasks>
      <task>
        <type>EXEC</type>
        <path>{COMMAND TO RUN}</path>
        <delay>10000</delay>
      </task>
    </tasks>
  </serrortasks>

  <!-- Tasks run on the receiver side -->
  <rpretasks>
    <!-- tasks run before the transfer -->
    <tasks>
      <task>
        <type>EXEC</type>
        <path>{COMMAND TO RUN}</path>
        <delay>10000</delay>
      </task>
    </tasks>
  </rpretasks>
  <rposttasks>
    <!-- tasks run after the transfer -->
    <tasks>
      <task>
        <type>EXEC</type>
        <path>{COMMAND TO RUN}</path>
        <delay>10000</delay>
      </task>
    </tasks>
  </rposttasks>
  <rerrortasks>
    <!-- tasks run when a transfer fails -->
    <tasks>
      <task>
        <type>EXEC</type>
        <path>{COMMAND TO RUN}</path>
        <delay>10000</delay>
      </task>
    </tasks>
  </rerrortasks>
</rule>
